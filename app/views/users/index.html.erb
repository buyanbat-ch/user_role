<h1>All users</h1>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <% if user.has_role? :company %>
        <td>
          <%= "company" %>
        </td>
      <% else %>
        <td>
          <%= "manager" %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New User', new_user_path %>
